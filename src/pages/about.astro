---
import Layout from '../layouts/Layout.astro';
// import Image from 'astro/components/Image.astro';
import { Image } from "astro:assets";  
  import heroBg from '../assets/hero-bg.png';

import Journal from '../components/about/Journal.astro'
import Manifesto from '../components/about/Manifesto.astro'


// JSON-LD schema for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "HighOnFashion â€“ Modern Vintage Editorial Thrift",
  "description": "Curated vintage fashion for the modern editorial. Sustainable style that doesn't compromise on aesthetic.",
  "url": "https://highonfashion.com"
};
---
<Layout title="HighOnFashion | Modern Vintage Editorial Thrift">
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main>


  
  <!-- Hero Section -->
    <section class="relative h-screen min-h-[400px] w-full overflow-hidden flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <Image
          src={heroBg}
          alt="High fashion editorial shot of models in vintage clothing"
          class="w-full h-full object-cover object-top"
          priority
        />
        <div class="absolute inset-0 bg-black/20"></div>
      </div>

      <div class="relative z-10 text-center text-[#F9F9F5] px-6 max-w-4xl mx-auto mt-20">

        <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl leading-none mb-8 animate-fade-in-up delay-100">
About Us
        </h1>

      </div>
    </section>

    <Manifesto/>

    <Journal/>


  </main>
</Layout>

<style>
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.8s ease-out forwards;
}
.delay-100 { animation-delay: 0.1s; }
.delay-200 { animation-delay: 0.2s; }
</style>
