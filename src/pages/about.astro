---
import Layout from '../layouts/Layout.astro';
// import Image from 'astro/components/Image.astro';
import { Image } from "astro:assets";  
  import heroBg from '../assets/hero-bg.png';

import Journal from '../components/about/Journal.astro'
import Manifesto from '../components/about/Manifesto.astro'
import Hero from '../components/Hero.astro';


// JSON-LD schema for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "HighOnFashion â€“ Modern Vintage Editorial Thrift",
  "description": "Curated vintage fashion for the modern editorial. Sustainable style that doesn't compromise on aesthetic.",
  "url": "https://highonfashion.com"
};
---
<Layout title="HighOnFashion | Modern Vintage Editorial Thrift">
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main>


  
  <!-- Hero Section -->

   <Hero
      heroImage={heroBg}
      heading="About Us"
      tagline="Sustainable, curated thrift with a high-fashion editorial edge"
      imageAlt="Modern vintage fashion editorial featuring curated thrift clothing"
    />

    <Manifesto/>

    <Journal/>


  </main>
</Layout>

<style>
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.8s ease-out forwards;
}
.delay-100 { animation-delay: 0.1s; }
.delay-200 { animation-delay: 0.2s; }
</style>
