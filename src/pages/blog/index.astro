---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/Blog/BlogCard.astro";
import blogsJson from "../../data/blogs.json";

interface Blog {
  id: string;
  title: string;
  description: string;
  date: string;
  readTime: string;
  cover: string;
  content: string;
}

// Load blogs
const blogs: Blog[] = blogsJson;
---

<Layout title="Blog" description="Stories, guides, and thrift culture">
  <section class="max-w-7xl mx-auto px-6 py-20">
    <h1 class="text-4xl font-serif mb-12">Our Blog</h1>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogs.map((blog) => (
        <BlogCard post={blog} />
      ))}
    </div>
  </section>
</Layout>
