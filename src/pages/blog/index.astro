---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import BlogCard from "../../components/Blog/BlogCard.astro";
import heroBg from "../../assets/hero-bg.png";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => !data.draft);
---

<Layout title="Blog" description="Stories, guides, and thrift culture">
  <Hero
    heroImage={heroBg}
    heading="Blogs"
    tagline="Sustainable, curated thrift with a high-fashion editorial edge"
    imageAlt="Modern vintage fashion editorial featuring curated thrift clothing"
  />

  <section class="max-w-7xl mx-auto px-6 py-20 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {posts.map((post) => (
      <BlogCard post={post} />
    ))}
  </section>
</Layout>
