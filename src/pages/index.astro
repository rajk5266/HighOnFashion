---
import Layout from '../layouts/Layout.astro';
import CollectionsGrid from "../components/CollectionsGrid.astro";
import Brands from '../components/Brands.astro';
import LandingHero from '../components/LandingHero.astro';

import { Image } from "astro:assets";
import FeaturedCollectionsGrid from "../components/FeaturedCollectionsGrid.astro";
import { FeaturedCollections } from "../data/featuredCollections";

import heroBg from '../assets/hero-bg.png';
import scarfImg from '../assets/scarf.png';

// JSON-LD schema for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "HighOnFashion â€“ Modern Vintage Editorial Thrift",
  "description": "Curated vintage fashion for the modern editorial. Sustainable style that doesn't compromise on aesthetic.",
  "url": "https://highonfashion.com"
};
---
<Layout title="HighOnFashion | Modern Vintage Editorial Thrift">
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main>

    <!-- Hero Banner  -->

    <LandingHero/>
    <!-- Hero Banner  -->
  

    <!-- Collections -->
    <section id="collections" class="py-24 px-6 md:px-12">
      <CollectionsGrid />
    </section>


      <FeaturedCollectionsGrid collections={FeaturedCollections} />

      <Brands/>



    
  </main>
</Layout>

<style>
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.8s ease-out forwards;
}
.delay-100 { animation-delay: 0.1s; }
.delay-200 { animation-delay: 0.2s; }
</style>
