---
import Layout from '../layouts/Layout.astro';
import CollectionsGrid from "../components/CollectionsGrid.astro";
import { products } from '../data/products';
import { journalEntries } from '../data/journal';
import { Image } from "astro:assets";

import heroBg from '../assets/hero-bg.png';
import scarfImg from '../assets/scarf.png';

// JSON-LD schema for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "HighOnFashion – Modern Vintage Editorial Thrift",
  "description": "Curated vintage fashion for the modern editorial. Sustainable style that doesn't compromise on aesthetic.",
  "url": "https://highonfashion.com"
};
---
<Layout title="HighOnFashion | Modern Vintage Editorial Thrift">
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main>
    <!-- Hero Section -->
    <section class="relative h-screen min-h-[800px] w-full overflow-hidden flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <Image
          src={heroBg}
          alt="High fashion editorial shot of models in vintage clothing"
          class="w-full h-full object-cover object-top"
          priority
        />
        <div class="absolute inset-0 bg-black/20"></div>
      </div>

      <div class="relative z-10 text-center text-[#F9F9F5] px-6 max-w-4xl mx-auto mt-20">
        <p class="text-sm tracking-[0.2em] uppercase mb-6 opacity-90 animate-fade-in-up">
          Est. 2024 — Curated Vintage
        </p>

        <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl leading-none mb-8 animate-fade-in-up delay-100">
          Rethink.<br />
          <span class="italic font-light">Rewear.</span><br />
          Repeat.
        </h1>

        <div class="animate-fade-in-up delay-200">
          <a
            href="#collections"
            class="inline-block border border-[#F9F9F5] px-8 py-3 hover:bg-[#F9F9F5] hover:text-[#1A2F23] transition-colors uppercase tracking-widest text-sm"
          >
            View the Drop
          </a>
        </div>
      </div>
    </section>

    <!-- Collections -->
    <section id="collections" class="py-24 px-6 md:px-12">
      <CollectionsGrid />
    </section>

    <!-- Manifesto -->
    <section class="py-24 px-6 md:px-12 bg-[#F9F9F5] text-[#1A2F23]">
      <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <h2 class="font-serif text-4xl md:text-5xl leading-tight">
            Fashion shouldn't cost <br />
            <span class="italic opacity-60">the Earth.</span>
          </h2>

          <div class="w-24 h-px bg-[#1A2F23]/20"></div>

          <p class="text-lg opacity-80 leading-relaxed font-light">
            We believe that true style is timeless. In a world obsessed with the new,
            we choose the enduring. Every garment has a story — and a future with you.
          </p>

          <div class="grid grid-cols-2 gap-8 pt-4">
            <div>
              <span class="block text-4xl font-serif mb-2">85%</span>
              <span class="text-xs uppercase tracking-widest opacity-60">
                Textiles in landfills
              </span>
            </div>
            <div>
              <span class="block text-4xl font-serif mb-2">2700L</span>
              <span class="text-xs uppercase tracking-widest opacity-60">
                Water per t-shirt
              </span>
            </div>
          </div>
        </div>

        <div class="relative h-[600px] hidden lg:block">
          <div class="absolute top-0 right-0 w-3/4 h-3/4 bg-[#1A2F23] overflow-hidden">
            <Image
              src={scarfImg}
              alt="Silk scarf detail"
              class="w-full h-full object-cover opacity-80 mix-blend-overlay"
            />
          </div>

          <div class="absolute bottom-0 left-0 w-3/5 h-3/5 border border-[#1A2F23] p-4 flex items-center justify-center bg-[#F9F9F5]">
            <p class="font-serif text-2xl text-center italic px-8">
              “Style is eternal. Trends are temporary.”
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Journal -->
    <section class="py-24 bg-[#1A2F23] text-[#F9F9F5] px-6 md:px-12">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-serif text-4xl md:text-5xl mb-16 text-center">
          The Journal
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          {journalEntries.map(entry => (
            <article class="group">
              <div class="h-px bg-[#F9F9F5]/20 mb-6"></div>
              <div class="flex justify-between text-xs tracking-widest uppercase opacity-60 mb-4">
                <span>{entry.category}</span>
                <span>{entry.date}</span>
              </div>
              <h3 class="text-2xl font-serif mb-4 group-hover:text-gold transition-colors">
                {entry.title}
              </h3>
              <p class="opacity-70 font-light mb-6">
                {entry.excerpt}
              </p>
              <span class="text-xs uppercase tracking-widest border-b border-[#F9F9F5]/30">
                Read Story
              </span>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.8s ease-out forwards;
}
.delay-100 { animation-delay: 0.1s; }
.delay-200 { animation-delay: 0.2s; }
</style>
