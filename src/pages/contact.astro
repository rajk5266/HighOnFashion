---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroBg from "../assets/hero-bg.png";

---

<Layout
  title="Contact Us"
  description="Get in touch with our thrift store. Visit us or reach out anytime."
>
  <!-- Hero Section -->
  <section
    class="relative min-h-[400px] w-full overflow-hidden flex items-center justify-center"
  >
    <div class="absolute inset-0 z-0">
      <Image
        src={heroBg}
        alt="High fashion editorial shot of models in vintage clothing"
        class="w-full h-full object-cover object-top"
        priority
      />
      <div class="absolute inset-0 bg-black/20"></div>
    </div>

    <div
      class="relative z-10 text-center text-[#F9F9F5] px-6 max-w-4xl mx-auto mt-20"
    >
      <h1
        class="font-serif text-5xl md:text-7xl lg:text-8xl leading-none mb-8 animate-fade-in-up delay-100"
      >
        Contact Us
      </h1>
    </div>
  </section>

  <!-- CONTENT -->
  <section class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- CONTACT DETAILS -->
      <div class="space-y-8">
    <div class="flex gap-4">
          <i class="fa-solid fa-map-pin mt-1 text-neutral-500"></i>
          <div>
            <h3 class="text-lg font-medium mb-1">Shop Address</h3>
            <p class="text-neutral-600 leading-relaxed">
              High On Fashion Thrift Store<br>
              2nd Floor, XYZ Market<br>
              City Name, State – 000000<br>
              India
            </p>
          </div>
        </div>


        <!-- Timings -->
        <div class="flex gap-4">
          <i class="fa-regular fa-clock mt-1 text-neutral-500"></i>
          <div>
            <h3 class="text-lg font-medium mb-1">Store Timings</h3>
            <p class="text-neutral-600">
              Monday – Saturday<br>
              11:00 AM – 9:00 PM
            </p>
          </div>
        </div>

       <!-- Phone -->
        <div class="flex gap-4">
          <i class="fa-solid fa-phone mt-1 text-neutral-500"></i>
          <div>
            <h3 class="text-lg font-medium mb-1">Contact</h3>
            <p class="text-neutral-600">
              Phone: <a href="tel:+919999999999" class="underline hover:text-black">+91 99999 99999</a><br>
              Email: <a href="mailto:hello@highonfashion.in" class="underline hover:text-black">hello@highonfashion.in</a>
            </p>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium mb-3">Connect With Us</h3>
          <div class="flex items-center gap-4">
            <!-- Instagram -->
            <a
              href="https://instagram.com/highonfashion"
              target="_blank"
              aria-label="Instagram"
              class="social-icon"
            >
              <i class="fa-brands fa-instagram"></i>
            </a>

            <!-- WhatsApp -->
            <a
              href="https://wa.me/919999999999"
              target="_blank"
              aria-label="WhatsApp"
              class="social-icon"
            >
              <i class="fa-brands fa-whatsapp"></i>
            </a>

            <!-- Pinterest -->
            <a
              href="https://pinterest.com/highonfashion"
              target="_blank"
              aria-label="Pinterest"
              class="social-icon"
            >
              <i class="fa-brands fa-pinterest-p"></i>
            </a>

            <!-- Reddit -->
            <a
              href="https://reddit.com/u/highonfashion"
              target="_blank"
              aria-label="Reddit"
              class="social-icon"
            >
              <i class="fa-brands fa-reddit-alien"></i>
            </a>

            <!-- Email -->
            <a
              href="mailto:hello@highonfashion.in"
              aria-label="Email"
              class="social-icon"
            >
              <i class="fa-solid fa-envelope"></i>
            </a>
          </div>
        </div>
      </div>

      <!-- GOOGLE MAP -->
      <div class="w-full h-[400px] lg:h-full overflow-hidden ">
        <iframe
          title="Store Location"
          src="https://www.google.com/maps?q=Delhi&output=embed"
          class="w-full h-full border-0"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </section>
</Layout>
