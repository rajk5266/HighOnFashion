---
import { Image } from "astro:assets";

const { post } = Astro.props;
const { title, description, publishDate, coverImage, coverAlt } = post.data;
---

<article class="group overflow-hidden border border-neutral-200 bg-white">
  <a href={`/blog/${post.slug}`} class="block relative aspect-[4/3] overflow-hidden">
    <Image
      src={coverImage}         
      alt={coverAlt || title}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </a>

  <div class="p-6">
    <time datetime={publishDate.toISOString()} class="text-xs uppercase tracking-widest text-neutral-500 mb-3 block">
      {publishDate.toDateString()}
    </time>

    <h2 class="font-serif text-xl mb-3 leading-snug">
      <a href={`/blog/${post.slug}`} class="hover:underline underline-offset-4">
        {title}
      </a>
    </h2>

    <p class="text-sm text-neutral-600 line-clamp-3 mb-6">
      {description}
    </p>
  </div>
</article>
