---
const { id, name, description, image, alt, season } = Astro.props;
---

<article class="group overflow-hidden border border-neutral-200 hover:shadow-xl transition-shadow duration-300 flex flex-col">
  <!-- Image -->
  <div class="overflow-hidden aspect-[4/3] bg-neutral-100">
    <img
      src={image}
      alt={alt}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="p-4 flex flex-col flex-1 justify-between">
    <div>
      <p class="text-xs uppercase tracking-wider text-neutral-500 mb-1">
        {season}
      </p>

      <h3 class="text-lg font-semibold text-neutral-900">
        {name}
      </h3>

      <p class="text-sm text-neutral-600 mt-1 line-clamp-2">
        {description}
      </p>
    </div>

    <!-- Read More Button -->
    <div class="mt-4">
      <a
        href={`/collection/${id}`}
        class="inline-block text-center px-4 py-2 text-sm font-semibold text-white bg-neutral-900 hover:bg-neutral-700 transition-colors duration-300"
      >
        View Collection
      </a>
    </div>
  </div>
</article>
