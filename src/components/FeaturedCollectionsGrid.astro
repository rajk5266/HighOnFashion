---

type CollectionColor = "purple" | "orange" | "blue" | "green";

interface FeaturedCollection {
  id: string;
  name: string;
  image: string;
  alt: string;
  season: string;
  color: CollectionColor;
}

const colorStyles: Record<CollectionColor, string> = {
  purple: "bg-purple-600/30 text-purple-200",
  orange: "bg-orange-500/30 text-orange-200",
  blue: "bg-blue-600/30 text-blue-200",
  green: "bg-green-600/30 text-green-200"
};

const { collections } = Astro.props as {
  collections: FeaturedCollection[];
};


---

<section class="max-w-7xl mx-auto px-6 py-24">

  <div class="mb-12">
    <h2 class="text-3xl font-serif mb-2">Special Collections</h2>
    <p class="text-neutral-500">
      Curated drops with a distinct identity
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- LEFT LARGE -->
    <a
      href={`/collection/${collections[0].id}`}
      class="relative h-[420px] lg:h-[520px] group overflow-hidden"
    >
      <img
        src={collections[0].image}
        alt={collections[0].alt}
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
      />

      <div class={`absolute inset-0 ${colorStyles[collections[0].color]}`}></div>

      <div class="absolute top-6 left-6">
        <span class={`px-3 py-1 text-xs rounded-full ${colorStyles[collections[0].color]}`}>
          Special Drop
        </span>
      </div>

      <div class="absolute bottom-6 left-6 text-white">
        <p class="text-xs uppercase tracking-widest mb-1">
          {collections[0].season}
        </p>
        <h3 class="text-2xl font-serif">
          {collections[0].name}
        </h3>
      </div>
    </a>

    <!-- MIDDLE SPLIT -->
<!-- MIDDLE SPLIT -->
<div class="grid gap-6 lg:grid-rows-2">

  {collections.slice(1, 3).map((collection) => (
    <a
      href={`/collection/${collection.id}`}
      class="relative h-[220px] sm:h-[260px] lg:h-auto group overflow-hidden"
    >
      <img
        src={collection.image}
        alt={collection.alt}
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
      />

      <div class={`absolute inset-0 ${colorStyles[collection.color]}`}></div>

      <div class="absolute top-4 left-4">
        <span class={`px-3 py-1 text-xs rounded-full ${colorStyles[collection.color]}`}>
          Special Drop
        </span>
      </div>

      <div class="absolute bottom-4 left-4 text-white">
        <p class="text-xs uppercase tracking-widest mb-1">
          {collection.season}
        </p>
        <h3 class="text-lg font-serif">
          {collection.name}
        </h3>
      </div>
    </a>
  ))}

</div>


    <!-- RIGHT LARGE -->
    <a
      href={`/collection/${collections[3].id}`}
      class="relative h-[420px] lg:h-[520px] group overflow-hidden"
    >
      <img
        src={collections[3].image}
        alt={collections[3].alt}
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
      />

      <div class={`absolute inset-0 ${colorStyles[collections[3].color]}`}></div>

      <div class="absolute top-6 left-6">
        <span class={`px-3 py-1 text-xs rounded-full ${colorStyles[collections[3].color]}`}>
          Special Drop
        </span>
      </div>

      <div class="absolute bottom-6 left-6 text-white">
        <p class="text-xs uppercase tracking-widest mb-1">
          {collections[3].season}
        </p>
        <h3 class="text-2xl font-serif">
          {collections[3].name}
        </h3>
      </div>
    </a>

  </div>
</section>
